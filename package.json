{
	"name": "leaderbored",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "tsx server.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"auth:generate": "npx @better-auth/cli generate --output ./src/lib/db/auth-schema.ts",
		"drizzle:generate": "npx drizzle-kit generate --config=drizzle-dev.config.ts",
		"drizzle:migrate": "npx drizzle-kit migrate --config=drizzle-dev.config.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.3",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "^22.14.1",
		"@types/pg": "^8.15.6",
		"drizzle-kit": "^0.31.6",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tsx": "^4.21.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.4.11"
	},
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"@node-rs/argon2": "^1.1.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@prgm/sveltekit-progress-bar": "^3.0.2",
		"better-auth": "^1.3.34",
		"date-fns": "^4.1.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"ioredis": "^5.6.1",
		"lucide-svelte": "^0.556.0",
		"pg": "^8.16.3",
		"socket.io": "^4.8.3",
		"socket.io-client": "^4.8.3",
		"sqlite3": "^5.1.7",
		"svelte-modals": "^2.0.1",
		"svelte-persisted-store": "^0.12.0",
		"unique-username-generator": "^1.5.1",
		"zod": "^4.1.13"
	},
	"imports": {
		"$/*": [
			"./src/*"
		]
	}
}

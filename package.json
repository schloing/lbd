{
	"name": "leaderbored",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"pull": "npx drizzle-kit pull --config=drizzle-dev.config.ts;",
		"drizzle:generate": "npx drizzle-kit generate --config=drizzle-dev.config.ts;",
		"drizzle:migrate": "npx drizzle-kit migrate --config=drizzle-dev.config.ts;",
		"drizzle:push": "npx drizzle-kit push --config=drizzle-dev.config.ts;",
		"drizzle:prod": "npx drizzle-kit generate --config=drizzle-prod.config.ts; npx drizzle-kit migrate  --config=drizzle-prod.config.ts;"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.3",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "^22.14.1",
		"@types/pg": "^8.15.6",
		"drizzle-kit": "^0.31.6",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"sveltekit-sse": "^0.13.16",
		"tsx": "^4.20.6",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.4.11"
	},
	"dependencies": {
		"@auth/core": "^0.34.3",
		"@auth/drizzle-adapter": "^1.11.1",
		"@auth/sveltekit": "^1.8.0",
		"@libsql/client": "^0.15.15",
		"@node-rs/argon2": "^1.1.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"better-auth": "^1.3.34",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"ioredis": "^5.6.1",
		"pg": "^8.16.3",
		"sqlite3": "^5.1.7",
		"svelte-persisted-store": "^0.12.0",
		"svelte-simple-modal": "^2.0.0"
	},
	"imports": {
		"$/*": [
			"./src/*"
		]
	}
}
